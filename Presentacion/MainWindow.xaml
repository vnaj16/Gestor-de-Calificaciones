                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                    Text="Promedio ponderado del ciclo anterior: " VerticalAlignment="Center" Width="Auto"/>
                        <TextBlock x:Name="TextBlock_PromedioCicloAnterior_VerInfo" HorizontalAlignment="Left" TextWrapping="Wrap" 
                     VerticalAlignment="Center" Width="Auto"/>
