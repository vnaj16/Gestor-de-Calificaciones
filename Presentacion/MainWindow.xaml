                        <TextBlock x:Name="TextBlock_PuntosRestantesBeca_VerInfo" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    VerticalAlignment="Center" Width="Auto"/>
                    </StackPanel>
                </Label>

