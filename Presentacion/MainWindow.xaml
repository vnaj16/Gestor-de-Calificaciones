                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                    Text="Curso: " VerticalAlignment="Center" Width="Auto"/>
                        <TextBlock x:Name="TextBlock_NombreCurso_RegistrarNota" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    Text="Arquitectura y Sistemas Operativos" VerticalAlignment="Center" Width="Auto"/>
                    </StackPanel>
                </Label>

                <Label HorizontalAlignment="Left" Margin="90,206,0,0" 
                       VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                    Text="Promedio ponderado del curso: " VerticalAlignment="Center" Width="Auto"/>
                        <TextBlock x:Name="TextBlock_PromedioCurso_RegistrarNota" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    VerticalAlignment="Center" Width="Auto"/>
                    </StackPanel>
                </Label>

                <Label HorizontalAlignment="Left" Margin="382,206,0,0" 
                       VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
