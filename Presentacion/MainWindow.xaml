                <Label HorizontalAlignment="Left" Margin="634,567,0,0" 
                       VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                    Text="Promedio del ciclo minimo para la beca: " VerticalAlignment="Center" Width="Auto"/>
                        <TextBlock x:Name="TextBlock_PromedioBeca_VerInfo" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    VerticalAlignment="Center" Width="Auto"/>
