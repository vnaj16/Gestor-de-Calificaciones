                          CanUserResizeRows="False" CanUserResizeColumns="False" CanUserDeleteRows="False" CanUserAddRows="False" SelectionChanged="DataGrid_Evaluaciones_RegistrarNota_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tipo" IsReadOnly="True" Binding="{Binding Tipo}" Width="120"/>
