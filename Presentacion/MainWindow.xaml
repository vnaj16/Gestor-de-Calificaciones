                    Text="Puntos perdidos: " VerticalAlignment="Center" Width="Auto"/>
                        <TextBlock x:Name="TextBlock_PuntosPerdidosCurso_RegistrarNota" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    VerticalAlignment="Center" Width="Auto"/>

                    </StackPanel>
                </Label>
                <TextBlock HorizontalAlignment="Left" Margin="93,316,0,0" TextWrapping="Wrap" 
                    Text="Seleccione la evaluación" VerticalAlignment="Top"/>
