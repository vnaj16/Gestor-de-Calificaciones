                        <DataGridTextColumn Header="Descripcion" IsReadOnly="True" Binding="{Binding Descripcion}" Width="300"/>
                        <DataGridTextColumn Header="Peso" IsReadOnly="True" Binding="{Binding Peso}" Width="100"/>
                        <DataGridTextColumn Header="Nota" Binding="{Binding Nota}" Width="100"/>
