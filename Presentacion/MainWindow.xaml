<Window x:Class="Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="Gestor de Calificaciones" Height="800" Width="1200" ResizeMode="CanMinimize" Icon="university.ico">

    <Window.Resources>
        <Style x:Key="Style_Button_Selected" TargetType="Button" >
            <Setter Property="Background" Value="#FF1F618D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="Style_Button_Normal" TargetType="Button">
            <Setter Property="Background" Value="#cccccc"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="Style_Buttons_Workstation" TargetType="Button">
            <Setter Property="Background" Value="#FF1F618D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="Grid_Main">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Grid_Top" Grid.Row="0" Background="#FF1F618D">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>

            <Label Margin="21,16,1011,16">
                <TextBlock Text="Gestor de Calificaciones" TextWrapping="Wrap"/>
            </Label>

            <Label Margin="502,16,384,16">
                <TextBlock Text="Universidad Peruana de Ciencias Aplicadas" TextWrapping="Wrap"/>
            </Label>

            <Label Margin="1034,16,10,16">
                <TextBlock Text="Arthur Valladares Nole" TextWrapping="Wrap"/>
            </Label>

        </Grid>


        <Grid x:Name="Grid_Center" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="Grid_Menu" Grid.Column="0" Background="#e5e5e5">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#cccccc"/>
                    </Style>
                </Grid.Resources>

                <Button x:Name="Button_VerInfo" Content="Ver Información" Margin="0,30,0,630" 
                        Style="{StaticResource Style_Button_Selected}" Click="Button_Any_Click" >

                </Button>

                <Button x:Name="Button_RegistrarNotas" Content="Registrar Notas" Margin="0,90,0,570" 
                       Click="Button_Any_Click">

                </Button>

                <Button  x:Name="Button_RegistrarCiclo" Content="Registrar Ciclo" Margin="0,150,0,510" 
                         Click="Button_Any_Click"/>

                <Button x:Name ="Button_CalculadoraPonderado" Content="Calculadora Ponderado" Margin="0,210,0,450"  Style= "{StaticResource Style_Button_Normal}" Click="Button_CalculadoraPonderado_Click">

                </Button>

                <Button x:Name="Button_Configuracion" Content="Configuración" IsEnabled="False" Margin="0,650,0,10"  Style= "{StaticResource Style_Button_Normal}" Click="Button_Any_Click">

                </Button>
            </Grid>

