                        <TextBlock x:Name="TextBlock_CreditosCurso_RegistrarNota" HorizontalAlignment="Left" TextWrapping="Wrap" 
                    VerticalAlignment="Center" Width="Auto"/>
                    </StackPanel>
                </Label>

                <Label HorizontalAlignment="Left" Margin="642,206,0,0" 
                       VerticalAlignment="Top">
